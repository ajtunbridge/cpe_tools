<UserControl x:Class="CPE.Sales.DataTemplates.SalesOrderLineDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPE.Sales.DataTemplates"
             mc:Ignorable="d">
    <Grid>
           <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Image Source="{Binding Photo, Converter={StaticResource BinaryImageConverter}}"/>
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="{Binding DrawingNumber}"/>
            <TextBlock Text="{Binding Name}"/>
            <TextBlock Text="{Binding OriginalDate}"/>
            <TextBlock Text="{Binding RescheduledDate}"/>
        </StackPanel>
    </Grid>
</UserControl>
