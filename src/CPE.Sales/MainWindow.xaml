<Window x:Class="CPE.Sales.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPE.Sales"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        Title="CPE --> Sales" Height="300" Width="300"
        DataContext="{Binding MainModel, Source={StaticResource BootstrapLocator}}">
    <Grid>
        <ListBox ItemsSource="{Binding SalesOrders}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Sender}"/>
                        <TextBlock Text="{Binding Attachments}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
